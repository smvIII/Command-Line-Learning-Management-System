<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LMS.Maui.Views.InstructorViews.InstructorView"
             Title="InstructorView">
    <StackLayout Margin="50">
        <Label 
            Text="INSTRUCTOR VIEW"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Grid RowDefinitions="50, Auto, Auto, Auto, Auto, Auto, Auto, *" 
              ColumnDefinitions="*,*"
              ColumnSpacing="20"
              RowSpacing="8">

            <!-- COURSE BUTTONS -->
            <Label Grid.Row ="0" Grid.Column="0" 
                   Text="Course Options" FontSize="20" 
                   HorizontalTextAlignment="Center" />

            <Button Grid.Row="1" Grid.Column="0" 
                x:Name="createCourseBtn"
                Text="Create course"
                Clicked="OnNavigate1Clicked" />

            <Button Grid.Row="2" Grid.Column="0" 
                x:Name="courseSearchBtn"
                Text="Search for course"
                Clicked="OnNavigate2Clicked" />

            <Button Grid.Row="3" Grid.Column="0" 
                x:Name="updateCourseBtn"
                Text="Update course" 
                Clicked="OnNavigate3Clicked" />

            <Button Grid.Row="4" Grid.Column="0" 
                x:Name="listCoursesBtn"
                Text="List courses" 
                Clicked="OnNavigate4Clicked" />

            <Button Grid.Row="5" Grid.Column="0" 
                x:Name="addPersonToCourseBtn"
                Text="Add person to course" 
                Clicked="OnNavigate5Clicked" />


            <!--- Person Buttons -->
            <Label Grid.Row ="0" Grid.Column="1"
                   Text="Person Options"
                   FontSize="20"
                   HorizontalTextAlignment="Center" />

            <Button Grid.Row="1" Grid.Column="1" 
                x:Name="createPersonBtn"
                Text="Create person" 
                Clicked="OnNavigate6Clicked" />

            <Button Grid.Row="2" Grid.Column="1" 
                x:Name="personSearchBtn"
                Text="Search for person" 
                Clicked="OnNavigate2Clicked" />

            <Button Grid.Row="3" Grid.Column="1" 
                x:Name="updatePersonBtn"
                Text="Update person" 
                Clicked="OnNavigate3Clicked" />

            <Button Grid.Row="4" Grid.Column="1" 
                x:Name="listPeopleBtn"
                Text="List people" 
                Clicked="OnNavigate8Clicked" />

            <Button Grid.Row="5" Grid.Column="1" 
                x:Name="rmPersonFromCourseBtn"
                Text="Remove person remove course" 
                Clicked="OnNavigate5Clicked" />


        </Grid>

    </StackLayout>

</ContentPage>