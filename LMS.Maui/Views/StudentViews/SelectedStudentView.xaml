<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LMS.Maui.Views.StudentViews.SelectedStudentView"
             Title="SelectedStudentView">
    <VerticalStackLayout Spacing="20" Margin="50">
        <Label 
            Text="{Binding SelectedPersonName, StringFormat='Welcome {0}!'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            Text="Your courses:"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <ListView
            ItemsSource="{Binding EnrolledCourses}" />
            


    </VerticalStackLayout>
</ContentPage>